@page "/dashboard"
@inject IDashboardService DashboardService

<div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4">
    <!-- Total Ingresos -->
    <div class="bg-white border-l-4 border-blue-500 shadow-md p-6 rounded-lg flex items-center">
        <div class="flex-1">
            <p class="text-xs font-semibold text-blue-600 uppercase">Total Income</p>
            <p class="text-xl font-bold text-gray-700">S/. @_dashboard.Income</p>
        </div>
        <div class="text-gray-500 text-4xl">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
        </div>
    </div>

    <!-- Total Ventas -->
    <div class="bg-white border-l-4 border-green-500 shadow-md p-6 rounded-lg flex items-center">
        <div class="flex-1">
            <p class="text-xs font-semibold text-green-600 uppercase">Total Sales</p>
            <p class="text-xl font-bold text-gray-700">@_dashboard.Sales</p>
        </div>
        <div class="text-gray-500 text-4xl">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3v11.25A2.25 2.25 0 0 0 6 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0 1 18 16.5h-2.25m-7.5 0h7.5m-7.5 0-1 3m8.5-3 1 3m0 0 .5 1.5m-.5-1.5h-9.5m0 0-.5 1.5m.75-9 3-3 2.148 2.148A12.061 12.061 0 0 1 16.5 7.605" />
            </svg>
        </div>
    </div>

    <!-- Total Clientes -->
    <div class="bg-white border-l-4 border-yellow-500 shadow-md p-6 rounded-lg flex items-center">
        <div class="flex-1">
            <p class="text-xs font-semibold text-yellow-600 uppercase">Total Customers</p>
            <p class="text-xl font-bold text-gray-700">@_dashboard.Customers</p>
        </div>
        <div class="text-gray-500 text-4xl">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            </svg>
        </div>
    </div>

    <!-- Total Productos -->
    <div class="bg-white border-l-4 border-cyan-500 shadow-md p-6 rounded-lg flex items-center">
        <div class="flex-1">
            <p class="text-xs font-semibold text-cyan-600 uppercase">Total Products</p>
            <p class="text-xl font-bold text-gray-700">@_dashboard.Products</p>
        </div>
        <div class="text-gray-500 text-4xl">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m21 7.5-9-5.25L3 7.5m18 0-9 5.25m9-5.25v9l-9 5.25M3 7.5l9 5.25M3 7.5v9l9 5.25m0-9v9" />
            </svg>

        </div>
    </div>
</div>


@code {
    private DashboardDto _dashboard = new();
    
    protected override async Task OnInitializedAsync()
    {
        var response = await DashboardService.SummaryAsync();
        if (response is { Success: true })
        {
            _dashboard = response.Data!;
        }
    }
}